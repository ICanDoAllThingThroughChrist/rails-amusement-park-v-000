<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :height, "Height (in inches)" %>
  <%= f.number_field  :height %>
  <%= f.label :nausea,"How nauseous are you? (1-5 scale)" %>
  <%= f.number_field  :nausea %>
  <%= f.label :tickets,"how many tickets are in your pockets" %>
  <%= f.number_field :tickets %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :admin %>
  <%= f.check_box :admin %><br>

  <%= f.submit %>
<% end %>
